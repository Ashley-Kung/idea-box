<html>
  <head>
    <title>IdeaBox</title>
  </head>
  <body>
    <h1>IdeaBox</h1>
    <p>Add an idea:</p>
    <form action='/' method='POST'>
      <input type="text" name="idea_title" value="Title of idea"></input>
      <textarea name="idea_description"></textarea>
      <input type="submit" value="Add Idea"></input>
    </form>
    <h2>List of Ideas:</h2>
    <ul>
      <% ideas.each do |idea| %>
        <li>
          <%= idea.title %><br/>
          <%= idea.description %>
        </li>
        <% end %>
    </ul>
  </body>
</html>