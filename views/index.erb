<html>
  <head>
    <title>IdeaBox</title>
  </head>
  <body>
    <h1>IdeaBox</h1>
    <p>Add an idea:</p>
    <form action='/' method='POST'>
      <input type="text" name="idea_title" value="Title of idea"></input>
      <textarea name="idea_description"></textarea>
      <input type="submit" value="Add Idea"></input>
    </form>
    <h2>List of Ideas:</h2>
    <ul>
      <% ideas.each_with_index do |idea, id| %>
        <li>
          <%= idea.title %> (<%= id %>) <br/>
          <%= idea.description %>
          <a href = '/<%= id %>/edit'>Edit</a>
          <form action="/<%= id %>" method="POST">
            <input type="hidden" name="_method" value = "DELETE">
            <input type="submit" value="delete"/>
          </form>
        </li>
        <% end %>
    </ul>
  </body>
</html>